# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@host:5432/database_name
# Example for Neon: postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=5000

# Session secret - Generate a strong random string
SESSION_SECRET=your_very_secure_random_string_here_make_it_long_and_complex

# ===========================================
# GOOGLE OAUTH CONFIGURATION (Optional)
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_DOMAIN=your-domain.com

# ===========================================
# EMAIL CONFIGURATION (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@your-domain.com

# ===========================================
# GOOGLE CLOUD STORAGE (For file uploads)
# ===========================================
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket-name
# Path to your service account key file (optional if using default credentials)
GOOGLE_APPLICATION_CREDENTIALS=/app/service-account-key.json

# ===========================================
# SECURITY SETTINGS
# ===========================================
# CORS origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ===========================================
# REDIS CONFIGURATION (Optional - for session storage)
# ===========================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ===========================================
# SSL/TLS SETTINGS
# ===========================================
# Force HTTPS in production
FORCE_HTTPS=true
TRUST_PROXY=true

# ===========================================
# BACKUP SETTINGS
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_GOOGLE_AUTH=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_UPDATES=true

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# ===========================================
# DEVELOPMENT/DEBUG (Set to false in production)
# ===========================================
DEBUG=false
ENABLE_CORS=true
